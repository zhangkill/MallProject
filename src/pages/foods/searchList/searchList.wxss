/* pages/foods/list.wxss */
.bgfff{
    background: #fff;
}
.fd-search-box{
    position: relative;
    z-index: 2;
    padding-top:10rpx 
}
.fd-search-box .fd-search-con{
    width: 685rpx;
    height: 80rpx;
    box-sizing: border-box;
    padding: 0 60rpx 0 30rpx;
    line-height: 80rpx;
    margin:0 auto;
    background: #F3F3F3;
    border-radius: 40rpx; 
    position: relative;
}
.fd-search-box .fd-search-con input{
    font-size: 28rpx;
    height: 80rpx;
    line-height: 80rpx;
}
.fd-search-box .fd-search-con .fd-search-btn{
    position: absolute;
    width: 34rpx;
    height: 32rpx;
    padding: 10px;
    top:4rpx;
    right: 20rpx;
    z-index: 2;
}
.flex-box{
    position: relative;
    z-index: 2;
    display: flex;
    display: -webkit-flex;
    justify-content:space-around;
    border-bottom: 2rpx solid #F3F3F3;
}
.flex-box .fd-sel-item {
    width: 50%;
    text-align: center;
    font-size: 28rpx;
    padding:22rpx 0 24rpx 0; 
    line-height: 40rpx;
    color: #666666;
}
.flex-box .fd-sel-item image {
    position: relative;
    top:-3rpx;
    margin-left: 10rpx;
    width: 16rpx;
    height: 13rpx;
}
.vertical-line{
    position: relative;
}
.vertical-line::after{
    content: '';
    display: block;
    position: absolute;
    z-index: 1;
    width: 2rpx;
    height: 22rpx;
    background: #858585;
    top:33rpx;
    right: 0;
}
.fd-sel-list{
    padding: 10rpx 30rpx;
    background: #fff;   
    position: relative;
    z-index: 2;  
}
.fd-sel-list .fd-sel-list-item{
    line-height: 73rpx;
    font-size: 28rpx;
    color: #666666;
}
.fixedbox{
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    z-index: 3;
}
.fd-bgbox{
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    z-index: 0;
    background: rgba(0, 0, 0, 0.3);
}
.fd-data-list{
    padding-top: 98rpx;
    box-sizing: border-box;
}
.fd-sel-list .orange{
    color: #FFA819;
}
.bottom-txt{
    text-align: center;
    color: #999;
    font-size: 24rpx;
    padding: 40rpx;
}