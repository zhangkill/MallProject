.days-box{
    display: flex;
    flex-wrap: wrap;
    background: #FFFCF7;
}
.month-tt{
    height: 78rpx;
    line-height: 78rpx;
    font-size: 34rpx;
    text-align: center;
}
.grid {
    width: 100rpx;
    height: 100rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.day{
    color: #DDDDDD;
    font-size: 24rpx;
    font-weight: 600;
}
.active_grid .day{
    color: #333333;
} 
.active_grid .price{
    font-size: 24rpx;
    color: #FF5A2D;
}
.selected_grid{
    background: #FFA819;
    border-radius: 8rpx;
}
.selected_grid .day,
.selected_grid .price{
    color: #fff;
}